<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Estilo para el DataGrid -->
    <Style Selector="DataGrid">
        <Setter Property="Background" Value="#12181f" /> <!-- Fondo gris claro -->
        <Setter Property="BorderBrush" Value="Transparent" /> <!-- Sin bordes -->
        <Setter Property="BorderThickness" Value="0" /> <!-- Sin bordes -->
        <Setter Property="RowHeight" Value="27" /> <!-- Fila más delgada -->
    </Style>

    <!-- Estilo para el encabezado del DataGrid -->
    <Style Selector="DataGridColumnHeader">
        <Setter Property="Background" Value="#0b131c" /> <!-- Fondo negro -->
        <Setter Property="Foreground" Value="White" /> <!-- Letras blancas -->
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HorizontalContentAlignment" Value="Center" /> <!-- Centrado horizontal -->
        <Setter Property="VerticalContentAlignment" Value="Center" /> <!-- Centrado vertical -->
        <Setter Property="Padding" Value="10" />
    </Style>

    <!-- Estilo para las filas del DataGrid -->
    <Style Selector="DataGridRow">
        <Setter Property="Background" Value="#12181f" /> <!-- Fondo gris claro -->
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="#293645" /> <!-- color del Separador de fila-->
        <Setter Property="BorderThickness" Value="0,0,0,1" /> <!-- Línea separadora -->
    </Style>
    

    <!-- ~1~ Estilo para la fila seleccionada @1@ -->
    <Style Selector="DataGridRow:selected">
        <Setter Property="Background" Value="Red" /> <!--~2~ Fondo cuando está seleccionada @2@-->
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <!--~2~ Estilo para cuando el cursor pasa sobre una fila (sin seleccionar una celda específica) @2@-->
    <Style Selector="DataGridRow:pointerover">
        <Setter Property="Background" Value="#475f78" /> <!--~2~ Fondo más oscuro para el hover sobre la fila @2@-->
    </Style>

</Styles>